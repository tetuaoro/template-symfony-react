{% extends 'base.html.twig' %}

{% block title %}Hello AppController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.col {
			width: 50%;
		}
	</style>

	<div class="example-wrapper">
		<h1>Template Symfony React</h1>
		<div>
			<p>This text is rendering by symfony.</p>
		</div>
		{{ react_component('ReactRoot', {'props': props}) }}
	</div>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
{% endblock %}
